{
    "name": "api-bun-template",
    "version": "1.0.0",
    "main": "index.ts",
    "author": "Sendi Agustian",
    "license": "MIT",
    "type": "module",
    "module": "index.ts",
    "routes": {
        "controllerPathGlobs": [
            "src/routes/**/*.ts"
        ]
    },
    "scripts": {
        "start": "node dist/index.js",
        "dev": "export NODE_ENV=development && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "build": "export NODE_ENV=production && tsoa spec-and-routes && bun --bun build src/index.ts --compile --minify --sourcemap --outfile build/api-app --target bun",
        "swagger": "tsoa spec",
        "format": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix "
    },
    "dependencies": {
        "@types/cors": "^2.8.17",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "morgan": "^1.10.0",
        "mysql2": "^3.11.0",
        "swagger-ui-express": "^5.0.1",
        "tsoa": "^6.4.0",
        "uuid": "^10.0.0",
        "winston": "^3.14.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/bun": "latest",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^10.0.0",
        "concurrently": "^8.2.2",
        "eslint": "^9.9.1",
        "globals": "^15.9.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "typescript-eslint": "^8.3.0"
    }
}
